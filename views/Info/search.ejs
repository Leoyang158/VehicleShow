<% layout('layouts/boilerplate')%>
<style>
    .card {
    box-shadow: 0 4px 8px 0 rgba(29, 28, 28, 0.2);
    /* max-width: 300px; */
    border-radius: 1%;
    border:2px solid #8e8383;
    margin-left: auto;
    text-align:center;
    font-family: 'Noto Sans JP', sans-serif;
    float: left;
    width: 33.33%;
    padding: 10px;
    }

    .make {
    color: rgb(0, 0, 0);
    font-size: 20px;
    }

    .card button {
    border: none;
    outline: 0;
    padding: 10px;
    color: white;
    background-color: rgb(49, 48, 48);
    text-align: center;
    cursor: pointer;
    width: 100%;
    font-size: 20px;
    }

    .card button:hover {
        opacity: 0.7;
    }

    #container:after {
    content: "";
    display: table;
    clear: both;
    } 
    
    .title{
        font-family: 'Righteous', cursive;
        font-size: 50px;
        color: #000000;
    }

    .inputInfo{
        font-family: 'Righteous', cursive;
        font-size: 30px;
        color: rgb(0, 0, 0);
    }

    #rangeNum{
        font-family: 'Righteous', cursive;
        font-size: 30px;
        color: rgb(0, 0, 0);
    }

    #numberRange{
        font-family: 'Righteous', cursive;
        font-size: 20px;
        color: rgb(0, 0, 0);
    }
</style>
<h1 class="title">Search For Vehicle</h1>
<br>
<form id="searchForm">
    <div>
        <label for="type" class="inputInfo">Enter Type</label>
        <input class="form-control" type="text" name="type" placeholder="Eg. Sedan">
    </div>

    <br>
    <div>
        <label for="model" class="inputInfo">Enter Model</label>
        <input class="form-control" type="text" name="model" placeholder="Eg. Civic">
    </div>
    <br>

    <div>
        <label for="year" class="inputInfo">Enter Year</label>
        <input class="form-control" type="text" name="year" placeholder="Eg. 2017">
    </div>
    <br>

    <div>
        <label for="make" class="inputInfo">Enter Make</label>
        <input class="form-control"  type="text" name="make" placeholder="Eg. Honda">
    </div>
    <br>

    
    <label for="customRange1" class="form-label" id="rangeNum">Search Range</label>
    <input type="range" class="form-range" min="1" max="10" name="range" id="rangeM">
    <div id="numberRange"></div>
    <br>

    <input class="btn btn-secondary" type="reset" value="Reset">
    <input class="btn btn-primary" type="submit" value="Submit">
</form>
<br>
<section id="container">
</section>
<script src="/search_lists.js"></script>
<script>
    var slider = document.getElementById("rangeM");
    slider.addEventListener('click', function(){
        var numberRange = document.querySelector("#numberRange");
        numberRange.innerHTML = slider.value;
    })
</script>