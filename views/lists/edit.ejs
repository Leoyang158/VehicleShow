<% layout('layouts/boilerplate')%>
<div class="row">
    <h1 class="text-center">Edit Car</h1>
    <div class="col-6 offset-3">
        <form action="/lists/<%=car._id%>?_method=PUT" method="POST">
            <div class="mb-3">
                <label class="form-label" for="year">year</label>
                <input class="form-control" type="text" id="year" name="car[year]"
                    value="<%=car.year %>">
            </div>
            <div class="mb-3">
                <label class="form-label" for="make">Make</label>
                <input class="form-control" type="text" id="make" name="car[make]"
                    value="<%=car.make %>">
            </div>
            <div class="mb-3">
                <label class="form-label" for="model">Model</label>
                <input class="form-control" type="text" id="model" name="car[model]"
                    value="<%=car.model %>">
            </div>
            <div class="mb-3">
                <label class="form-label" type">Type</label>
                <input class="form-control" type="text" id="type" name="car[type]"
                    value="<%=car.type %>">
            </div>

            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" id="description"
                    name="car[description]"><%= car.description%></textarea>
            </div>
            <div class="mb-3">
                <button class="btn btn-info">Update Vehicle</button>
            </div>
        </form>
        <a href="/lists/<%= car._id%>">Back To Car</a>

    </div>
</div>