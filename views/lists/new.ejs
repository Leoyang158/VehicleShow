<% layout('layouts/boilerplate')%>
<div class="row">
    <h1 class="text-center">New Vehicle</h1>
    <div class="col-6 offset-3">
        <form action="/lists" method="POST" novalidate class="validated-form">
            <div class="mb-3">
                <label class="form-label" for='model'> Model </label>
                <input class="form-control" type="text" id="model" name=car[model]" required>
                <div class="valid-feedback">
                    Looks Wonderful!!!
                </div>
            </div>
            <div class="mb-3">        
                <label class="form-label" for='year'> Year </label>
                <input class="form-control" type="text" id="year" name=car[year]" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for='make'> Make </label>
                <input class="form-control" type="text" id="make" name=car[make]" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for='type'> Type </label>
                <input class="form-control" type="text" id="type" name=car[type]" required>
            </div>  
            <div class="mb-3">
                <button class="btn btn-success">Add New Car</button>
            </div>
        </form>
        <a href="/lists">All Lists</a>
    </div>
</div>

<script>
    // Example starter JavaScript for disabling form submissions if there are invalid fields
(function () {
  'use strict'

  // Fetch all the forms we want to apply custom Bootstrap validation styles to
  const forms = document.querySelectorAll('.validated-form')

  // Loop over them and prevent submission
  Array.from(forms)
    .forEach(function (form) {
      form.addEventListener('submit', function (event) {
        if (!form.checkValidity()) {
          event.preventDefault()
          event.stopPropagation()
        }

        form.classList.add('was-validated')
      }, false)
    })
})()
</script>