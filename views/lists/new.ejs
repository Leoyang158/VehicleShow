<% layout('layouts/boilerplate')%>
<div class="row">
    <h1 class="text-center">New Campground</h1>
    <div class="col-6 offset-3">
        <form action="lists" methods="POST">
            <div class="mb-3">
                <label class="form-label" for='model'> Model </label>
                <input class="form-control" type="text" id="model" name=list[model]">
            </div>
            <div class="mb-3">        
                <label class="form-label" for='year'> Year </label>
                <input class="form-control" type="text" id="year" name=list[year]">
            </div>
            <div class="mb-3">
                <label class="form-label" for='make'> Make </label>
                <input class="form-control" type="text" id="make" name=list[make]">
            </div>
            <div class="mb-3">
                <label class="form-label" for='type'> Type </label>
                <input class="form-control" type="text" id="type" name=list[type]">
            </div>  
            <div class="mb-3">
                <button class="btn btn-success">Add New Car</button>
            </div>
        </form>
        <a href="/lists">All Lists</a>
    </div>
</div>