<% layout('layouts/boilerplate')%>
<h1> All Vehicles List </h1>
<div> 
    <p class="card-text">Year: <%= car.year %></p>
    <p class="card-text">Make: <%= car.make %></p>
    <p class="card-text">Model: <%= car.model %></p>
    <p class="card-text">Type: <%= car.type %></p> 
</div>
<div>
    <h2> Give A Review </h2>
    <form action="">
        <div class="mb-3">
            <label class="form-label" for="rating">Rating</label>
            <input classs="form-range" type="range" min="1" max="5" name="review[rating]" id="rating">
        </div>
        <div class="mb-3">
            <label class="form-label" for="body">Review</label>
            <textarea class="form-control" name="review[body]" id="body" cols="30" rows="3"></textarea>
        </div>
        <button class="btn btn-success">Submit</button>
    </form>
</div>

