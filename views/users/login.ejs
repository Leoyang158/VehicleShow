<% layout('layouts/boilerplate')%>
<style>
    .loginTitle{
        font-family: 'Righteous', cursive;
        font-size: 50px;
        color: #000000;
    }

    #Input{
        font-family: 'Righteous', cursive;
        font-size: 30px;
        color: #000000;
    }

    #icon{
        border: 5px solid rgb(104, 139, 169);
    }
</style>
<br>
<br>
<form action="/login" method="POST" class="validated-form" novalidate>
    <img class="mb-4" src="https://img.icons8.com/plasticine/2x/car--v2.png" alt="carDream" width="72" height="72" id="icon">
    <h1 class="loginTitle">Please sign in</h1>
    <br>
    <div class="form-group row">
        <label for="inputUsername" class="col-sm-2 col-form-label" id="Input">Username</label>
        <div class="col-sm-10">
            <input class="form-control" type="text" id="inputUsername" name="username" required autofocus>
            <div class="valid-feedback">
                Looks good!
            </div>
        </div>
    </div>
    <br>
    <div class="form-group row">
        <label for="inputPassword" class="col-sm-2 col-form-label" id="Input">Password</label>
        <div class="col-sm-10">
            <input class="form-control" type="password" id="inputPassword" name="password" required autofocus>
            <div class="valid-feedback">
                Looks good!
            </div>
        </div>
    </div>
    <br>
    <button class="btn btn-sm btn-primary btn-block" type="submit">Sign in</button>
</form>